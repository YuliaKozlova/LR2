@model AggregationService.Models.ModelsForView.ArenaList;



<h2>Концертные залы</h2>

<p>
        <a asp-area="" asp-controller="Arena" asp-action="AddArena">Добавить новую арену</a>    
</p>

<form>
    @for (int i = 1; i < @Model.countArenas / 10 + 2; i++)
    {
        string text = i.ToString();
        @Html.ActionLink(text, "Index", "Arena", new { id = i }, null);
        Write("  ");
    }
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Название концертного стадиона
            </th>
            <th>
                Вместительность
            </th>
            <th>
                Город
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.arenas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArenaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.CityName)
                </td>
                <td>
                    <a asp-action="Edite" asp-route-id="@item.ID">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.ID">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>